@using TelaEmpregos.Models.data
@model CadastroCurriculum

@{
    ViewBag.Title = "Curriculum";
    Layout = "~/Views/_LayoutTelas.cshtml";

    Cidade cidade = ViewBag.Cidade;
}


    <div class="col-md-6">
        <div class="col-md-6" style="height: 235px">
            <div class="box-body">


                @{
                    string urlFoto = "Resource/dist/img/empty-profile.png";

                    if (Model.imagemPerfil != String.Empty)
                    {
                        urlFoto = "files/" + Model.imagemPerfil;
                    }
                }

                <div class="form-group" style="text-align:center;">
                    <img style="border-radius: 15px; width:100%; height:200px" src="~/@urlFoto" id="imgProfile" />
                </div>
                <input id="txtIdCurriculum" name="txtIdCurriculum" type="hidden" value="@Model.id" />
            </div>
        </div>
        <div class="col-md-6 pull-right" style="height:235px" id="infBasic">
            <table>
                <tr>
                    <td style="padding:10px">
                        <h2 style="font-size:20px" id="nomePessoa">Nome da Pessoa</h2>
                        <input style="border-radius:5px" text" id="nomePessoa" name="txtNomePessoa" readonly value="@Model.nome">
                    </td>
                </tr>
                <tr>
                    <td style="padding:10px">
                        <h2 style="font-size:20px" id="profissao">Area de Atuação</h2>
                        <input style="border-radius:5px" type="text" id="areaAtuacao" name="txtAreaAtuacao" readonly value="@Model.profissao">
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            <div style="text-align:center">
                <h2>
                    Habilidades
                </h2>
            </div>

            <div>
                <div>
                    <div class="col-md-6"><h2 style="font-size:20px">Habilidades</h2></div>

                    <div class="col-md-6">
                        <h2 style="font-size:20px" id="lblConhecimentoNivel">Nível de conhecimento</h2>
                    </div>
                </div>
                <p style="padding: 1.5%"></p>
                <p id="p">
                    <input style="text-align:center; border-radius:5px" type="text" id="habilidade1" name="txtHabilidadeUm" value="@Model.habilidade1" readonly />
                    <input style="text-align:center; border-radius:5px" readonly value="@Model.nivelConhecimento1" />
                </p>
                <p style="padding: 1.5%">

                </p>
                <p id="p">
                    <input style="text-align:center; border-radius:5px" type="text" id="habilidade2" name="txtHabilidadeDois" readonly value="@Model.habilidade2">
                    <input style="text-align:center; border-radius:5px" readonly value="@Model.nivelConhecimento2" />
                </p>
                <p style="padding: 1.5%"></p>
                <p id="p">
                    <input style="text-align:center; border-radius:5px" type="text" id="habilidade3" name="txtHabilidadeTres" readonly value="@Model.habilidade3">
                    <input style="text-align:center; border-radius:5px" readonly value="@Model.nivelConhecimento3" />
                </p>
                <p style="padding: 1.5%"></p>
                <p id="p">
                    <input style="text-align:center; border-radius:5px" type="text" id="habilidade4" name="txtHabilidadeQuatro" readonly value="@Model.habilidade4">
                    <input style="text-align:center; border-radius:5px" readonly value="@Model.nivelConhecimento4" />
                </p>
                <p style="padding: 1.5%"></p>
                <p id="p">
                    <input style="text-align:center; border-radius:5px" type="text" id="habilidade5" name="txtHabilidadeCinco" readonly value="@Model.habilidade5" />
                    <input style="text-align:center; border-radius:5px" readonly value="@Model.nivelConhecimento5"/>
                </p>

            </div>
        </div>

        <div>
            <div id="EspacoBranco">
                <h2>Contato / Cidade</h2>
            </div>

            <div id="contato" class="col-md-6">
                <p class="col-md-12">
                    <h4> &nbsp;<a href="@Model.facebook"><i class="fa fa-facebook-official"></i> Facebook</a></h4>
                    <h4> &nbsp;<a href="@Model.linkedIn"><i class="fa fa-linkedin"></i> LinkedIn</a></h4>
                    <h4><i class="fa fa-whatsapp"></i> WhatsApp<input style="border-radius:5px" type="text" name="txtWhatsApp" readonly value="@Model.whatsApp"></h4>
                </p>
                <div class="col-md-6">
                    <h2 style="font-size:20px">Estado:</h2>
                    <p>
                                <input value="@cidade.estado" readonly style="border-radius:5px" />
                    </p>
                </div>
                <div class="col-md-6">
                    <h2 style="font-size:20px">Cidade:</h2>
                    <p>
                        <input value="@cidade.nome" readonly  style="border-radius:5px"  />
                    </p>
                </div>
                
            </div>
            
        </div>

    </div>

    <div class="col-md-6">
        <div id="Pessoal">
            <h2>Sobre</h2>
            <textarea name="txtSobre" id="1" cols="30" rows="8" readonly style="width: 100%; border-radius:5px">@Model.sobre</textarea>
        </div>

        <div id="Profissional">
            <h2>Experiências Profissionais</h2>
            <textarea name="txtExperienciaProfissional" readonly id="1" cols="30" rows="8" style="width: 100%; border-radius:5px">@Model.experiencia</textarea>
        </div>

        <div id="Academica">
            <h2>Formação Acadêmica</h2>
            <textarea name="txtFormacaoAcademica" id="1" readonly cols="30" rows="8" style="width: 100%; border-radius:5px">@Model.educacao</textarea>
        </div>
    </div>